<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <%= image_tag "copomo_logo_t1",class: "img-fluid mt-3 mb-3", style: "max-height: 120px;" %>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center">
      <h1>ログイン</h1>
    </div>
  </div>  
  <div class="row">
    <div class="col-12 card-body ">
      <div class="card w-50 pt-3 pl-5 pr-5 mx-auto shadow-lg">
        <%= form_with model: @user, url: user_session_path do |f| %>

          <div class="mb-3">
            <%= f.label :name, "ユーザー名" %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
          
          <% if devise_mapping.rememberable? %>
            <div class="mb-3">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "ログイン状態を保存する" %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-primary btn-lg w-100 mb-2"   %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
